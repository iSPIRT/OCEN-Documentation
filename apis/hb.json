        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoanDisbursementAnalytics"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
