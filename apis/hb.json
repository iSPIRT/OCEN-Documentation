        "type": "object",
        "properties": {
          "productData": {
            "$ref": "#/components/schemas/ProductData"
          },
          "loanId": {
            "type": "string"
          },
          "loanApplicationId": {
            "type": "string"
          },
          "metrics": {
            "type": "array",
